  <h1 class="title">Редактирование профиля</h1>
<%= form_for @user, :html => {:class => 'form'} do |f| %> <% if @user.errors.any? %>
        <div class="form__errors">
          <ul>
            <% for message in @user.errors.full_messages %>
              <li class="form-error__message flash-error"><%= message %>
            <svg width="30px" height="30px" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
</svg>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form__field">
        <%= f.label :email, 'Логин (email)', class: 'form-label' %>
        <%= f.text_field :email, class: 'form-text-field' %>
      </div>

      <div class="form__field">
        <%= f.label :username, 'Никнейм', class: 'form-label' %>
        <%= f.text_field :username, class: 'form-text-field' %>
      </div>

      <div class="form__field">
        <%= f.label :name, 'Имя', class: 'form-label' %>
        <%= f.text_field :name, class: 'form-text-field' %>
      </div>

      <div class="form__field">
        <%= f.label :description, 'Описание профиля', class: 'form-label' %>
        <%= f.text_area :description, size: '10x5', class: 'form-text-field' %>
      </div>

      <div class="form__field">
        <%= f.label :name, 'URL вашего аватара', class: 'form-label' %>
        <%= f.text_field :avatar_url, class: 'form-text-field' %>
      </div>

      <div class="form__field">
        <%= f.label :password, 'Пароль', class: 'form-label' %>
        <%= f.password_field :password, class: 'form-text-field' %>
      </div>

      <div class="form__field">
        <%= f.label :password_confirmation, 'Пароль ещё раз', class: 'form-label' %>
        <%= f.password_field :password_confirmation, class: 'form-text-field' %>
      </div>

      <div class="form__field">
        <%= f.submit 'Изменить', class: 'btn btn-dark form__btn' %>
      </div>
    <% end %>
